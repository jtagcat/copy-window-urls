{
  "manifest_version": 2,
  "name": "Copy Window URLs",
  "version": "1.5",
  "default_locale": "en",

  "description": "__MSG_extensionDescription__",

  "applications": {
    "gecko": {
      "strict_min_version": "68.0"
    }
  },
  "icons": {
    "16": "icons/default-16.png",
    "32": "icons/default-32.png",
    "64": "icons/default-64.png",
    "128": "icons/default-128.png"
  },

  "permissions": [ "tabs", "clipboardWrite", "notifications" ],

  "browser_action": {
    "default_title": "__MSG_extensionButtonLabel__",
    "browser_style": false,
		"default_icon": {
      "16": "icons/default-16.png",
      "32": "icons/default-32.png",
      "64": "icons/default-64.png",
			"128": "icons/default-128.png"
		},
		"theme_icons": [{
			"light": "icons/dark-16.png",
			"dark": "icons/light-16.png",
			"size": 16
		},
		{
			"light": "icons/dark-32.png",
			"dark": "icons/light-32.png",
			"size": 32
    },
    {
			"light": "icons/dark-64.png",
			"dark": "icons/light-64.png",
			"size": 64
    },
    {
			"light": "icons/dark-128.png",
			"dark": "icons/light-128.png",
			"size": 128
		}]
  },

  "background": {
    "scripts": ["background.js"]
  }
}
